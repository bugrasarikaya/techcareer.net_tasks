@model task_final.ViewModels.AccountViewModel
@{
	ViewData["Title"] = "Account Editing";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="AccountEdit">
			<input asp-for="ID" type="hidden" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Email" class="control-label"></label>
				<input asp-for="Email" type="email" class="form-control" />
				@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
			</div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Surname" class="control-label"></label>
				<input asp-for="Surname" class="form-control" />
				<span asp-validation-for="Surname" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label"></label>
				<input asp-for="Password" type="password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PasswordConfirm" class="control-label"></label>
				<input asp-for="PasswordConfirm" type="password" class="form-control" />
				<span asp-validation-for="PasswordConfirm" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary btn-lg" />
			</div>
		</form>
	</div>
</div>