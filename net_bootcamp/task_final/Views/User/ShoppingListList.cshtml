@model IEnumerable<task_final.Models.ShoppingList>
@{
	ViewData["Title"] = "ShoppingListList";
}
<p>
	<a asp-action="ShoppingListCreate">Create New</a>
</p>
@if (Model.Count() == 0) {
	<partial name="_EmptyList" />
} else {
	<h1>@ViewData["Title"]</h1>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.ID)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.TotalCost)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Status)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.ID)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<th>
						@Html.DisplayFor(model => item.TotalCost)
					</th>
					<td>
						@Html.DisplayFor(modelItem => item.Status)
					</td>
					<td>
						<a asp-action="ShoppingListDetails" asp-route-shopping_list_id="@item.ID">Details</a>
						<a asp-action="ShoppingListEdit" asp-route-shopping_list_id="@item.ID">Edit</a>
						<a asp-action="ShoppingListDelete" asp-route-shopping_list_id="@item.ID">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}