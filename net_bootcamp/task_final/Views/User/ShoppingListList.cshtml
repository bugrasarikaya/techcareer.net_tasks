@model IEnumerable<task_final.Models.ShoppingList>
@{
	ViewData["Title"] = "Shopping Lists";
}
<h1>@ViewData["Title"]</h1>
<hr />
@if (Model.Count() == 0) {
	<partial name="_EmptyList" />
} else {
	<table class="table">
		<thead class="table-light">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.TotalCost)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Status)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<th>
						@Html.DisplayFor(model => item.TotalCost)
					</th>
					<td>
						@Html.DisplayFor(modelItem => item.Status)
					</td>
					<td class="text-center">
						<a asp-action="ShoppingListDetails" asp-route-shopping_list_id="@item.ID" class="btn btn-primary btn-lg">Details</a>&emsp;
						<a asp-action="ShoppingListEdit" asp-route-shopping_list_id="@item.ID" class="btn btn-primary btn-lg">Edit</a>&emsp;
						<a asp-action="ShoppingListDelete" asp-route-shopping_list_id="@item.ID" class="btn btn-danger btn-lg">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
<br />
<div class="text-center">
	<a asp-action="ShoppingListCreate" class="btn btn-primary btn-lg">Create Shopping List</a>
</div>