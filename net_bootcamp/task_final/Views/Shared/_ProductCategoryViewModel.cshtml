@model task_final.ViewModels.ShoppingProductStatusViewModel
@{
	Layout = null;
}
<form asp-action="ShoppingProductStatus">
	<input asp-for=ShoppingProudctID type="hidden" />
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<select asp-for="StatusName" asp-items="Model.Statuses" onchange="SubmitForm(this.form)"></select>
		<span asp-validation-for="StatusName" class="text-danger"></span>
	</div>
</form>
<script>
	function SubmitForm(form) {
		form.submit();
	}
</script>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}