@model task_final.ViewModels.ShoppingProductQuantityViewModel
@{
	Layout = null;
}
<form asp-action="ShoppingProductQuantity">
	<input asp-for=ShoppingProudctID type="hidden" />
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<input asp-for="Quantity" min="1" class="form-control" onchange="SubmitForm(this.form)" />
		<span asp-validation-for="Quantity" class="text-danger"></span>
	</div>
</form>
<script>
	function SubmitForm(form) {
		form.submit();
	}
</script>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}