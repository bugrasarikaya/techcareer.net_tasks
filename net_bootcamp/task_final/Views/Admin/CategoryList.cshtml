@model IEnumerable<task_final.Models.Category>
@{
	ViewData["Title"] = "Category List";
}
<h1>@ViewData["Title"]</h1>
<hr />
@if (Model.Count() == 0) {
	<partial name="_EmptyList" />
} else {
	<table class="table">
		<thead class="table-light">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.ID)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.ID)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td class="text-center">
						<a asp-action="CategoryEdit" asp-route-category_id="@item.ID" class="btn btn-primary btn-lg">Edit</a>&emsp;
						<a asp-action="CategoryDelete" asp-route-category_id="@item.ID" class="btn btn-danger btn-lg">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
<div class="text-center">
	<a asp-action="CategoryCreate" class="btn btn-primary btn-lg">Create Category</a>
</div>