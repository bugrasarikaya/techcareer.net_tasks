@model IEnumerable<task_final.Models.Category>
@{
	ViewData["Title"] = "CategoryList";
}
<h1>@ViewData["Title"]</h1>
<p>
	<a asp-action="CategoryCreate">Create Category</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ID)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ID)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					<a asp-action="CategoryEdit" asp-route-id="@item.ID">Edit</a>
					<a asp-action="CategoryDelete" asp-route-id="@item.ID">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>