@model IEnumerable<task_final.ViewModels.ProductImageGetViewModel>
@{
	ViewData["Title"] = "Product List";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div>
	<partial name="_CategoryDropdownViewModel" model='new CategoryDropdownViewModel { Categories = (List<SelectListItem>)ViewData["CategoryDropdownViewModel"]!}' />
</div>
<br />
@if (Model.Count() == 0) {
	<partial name="_EmptyList" />
} else {
	<table class="table">
		<thead class="table-light">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.ProductID)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ProductName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.CategoryName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ProductDescription)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ProductPrice)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ImageSource)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.ProductID)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ProductName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CategoryName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ProductDescription)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ProductPrice)
					</td>
					<td>
						<img src="@Html.DisplayFor(modelItem => item.ImageSource)" height="200" />
					</td>
					<td class="text-center">
						<a asp-action="ProductDetails" asp-route-product_id="@item.ProductID" class="btn btn-primary btn-lg">Details</a>&emsp;
						<a asp-action="ProductDelete" asp-route-product_id="@item.ProductID" class="btn btn-danger btn-lg">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
<br />
<div class="text-center">
	<a asp-action="ProductCreate" class="btn btn-primary btn-lg">Create Product</a>
</div>