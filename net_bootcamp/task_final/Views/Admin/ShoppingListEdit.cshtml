@model task_final.ViewModels.ShoppingListEditViewModel
@{
	ViewData["Title"] = "Shopping List Editing";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="ShoppingListEdit">
			<input asp-for="ID" type="hidden" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<label asp-for="AccountEmail" class="control-label"></label>
				<select asp-for="AccountEmail" asp-items="Model.AccountEmails"></select>
				<span asp-validation-for="AccountEmail" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<label asp-for="StatusName" class="control-label"></label>
				<select asp-for="StatusName" asp-items="Model.Statuses"></select>
				<span asp-validation-for="StatusName" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary btn-lg" />
			</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}